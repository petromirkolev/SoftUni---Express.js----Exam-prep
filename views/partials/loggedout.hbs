<section>
    <h1>Best Rated Plays</h1>
    <div class="theaters-container">

        {{#each guestPlays}}
        <div>
            <div class="home-image">
                <img src="{{imageUrl}}" alt="Card image cap"
                    width="400">
            </div>
            <div class="info">
                <h4>{{title }}</h4>
            </div>
        </div>
        {{else}}
        <h4>No plays yet...</h4>
        {{/each}}
    </div>
</section>